<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2">
  <h3>Edit Your Listing</h3>
  <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
      <label for ="title" class="form-label">Title</label>
      <input type="text" name="listing[title]" value="<%= listing.title %>"class="form-control" required>
      
    </div>
    <div class="mb-3">
      <label for ="description" class="form-label">Description</label>
      <textarea type="text" name="listing[description]"class="form-control" required><%= listing.description %></textarea>
      <div class="invalid-feedback">Write short Description</div>
    </div>
    <!-- <div class="mb-3">
      <label for ="image" class="form-label">Image</label>
      <input type="text" name="listing[image][url]" value="<%= listing.image.url %>"class="form-control" required>
      <div class="invalid-feedback">Image url</div>
    </div> -->
    <div class="mb-3">
      Original Listing Image <br>
      <img src="<%= originalImageUrl %>"class="img-fluid rounded">
    </div>
    <div class="mb-3">
      <label for ="image" class="form-label">Upload New Image</label>
      <input type="file" name="listing[image]" placeholder="Enter image URL/link" class="form-control"   >
      <div class="invalid-feedback">Enter Valid </div>
    </div>
    <div class="row">
      <div class="col-md-4 mb-3">
        <label for ="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" value="<%= listing.price%>" class="form-control" required>
        <div class="invalid-feedback">valid Price</div>
      </div>
      <div class="col-md-8 md-3">
        <label for ="location" class="form-label">Location</label>
        <input type="location" name="listing[location]" value="<%= listing.location %>"class="form-control" required>
        <div class="invalid-feedback">valid location</div>
      </div>
    </div>
    
    <div class="mb-3">
      <label for ="country" class="form-label">Country</label>
      <input type="country" name="listing[country]" value="<%= listing.country %>"class="form-control" required>
      <div class="invalid-feedback">valid country</div>
    </div>
    <button class="btn btn-dark mb-3 edit-btn">Add</button>
  </form>
  </div>
</div>
